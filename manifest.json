{
    "manifest_version": 2,
  
    "name": "suggestionExtension",
    "description": "",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "content_scripts": [
        {
          "matches": ["http://*/*"],
          "css": ["popup.css"],
          "js": ["popup.js"],
          "run_at": "document_end",
          "all_frames": true
        },
        {
            "matches": ["https://*/*"],
            "css": ["popup.css"],
            "js": ["popup.js"],
            "run_at": "document_end",
            "all_frames": true
        }
      ],
      "web_accessible_resources": [
        "images/spoon.jpeg",
        "images/poolNoodles.jpg",
        "images/cannedAir.jpg",
        "images/porgPlushie.jpeg",
        "images/snow.jpg"
      ],
      "icons": {"128":"spoonIcon128.png"}
  }
